
.carbm-navigation-overlay

  animation-duration: 0.2s

  &.animation-mount
    animation-name: carbm-nav-overlay-enter
    animation-timing-function: ease-out

  &.animation-unmount
    animation-name: carbm-nav-overlay-enter
    animation-timing-function: ease-in
    animation-direction: reverse

  position: fixed
  top: 0
  left: 0
  height: 100vh
  width: 100vw
  background-color: rgba(0, 0, 0, 0.24)

.carbm-navigation-drawer

  animation-duration: 0.2s

  &.animation-mount
    animation-name: carbm-nav-drawer-enter
    animation-timing-function: ease-out

  &.animation-unmount
    animation-name: carbm-nav-drawer-enter
    animation-timing-function: ease-in
    animation-direction: reverse


  position: fixed
  font-size: 14px

  top: 0
  left: 0
  height: 100vh
  width: 250px
  box-shadow: 5px 0px 10px rgba(0, 0, 0, 0.14)

  background-color: white


.carbm-navigation-item
  position: relative

  display: flex
  align-items: center

  color: rgba(0, 0, 0, 0.87)

  height: 48px
  font-weight: bold

  &.selected
    background-color: rgba(0, 0, 0, 0.14)

.carbm-navigation-item-icon
  &:before
    font-size: 24px
  padding-left: 16px
  width: 72px
  color: rgba(0, 0, 0, 0.65)


.carbm-navigation-divider
  position: relative
  width: 100%
  border-bottom: 1px solid rgba(0, 0, 0, 0.07)
  margin-top: 4px
  margin-bottom: 3px

.carbm-navigation-body
  display: flex
  flex-direction: column
  flex-grow: 1

.carbm-navigation-header
  padding-top: 16px
  padding-left: 16px

.carbm-navigation-subheader
  padding-left: 16px

.carbm-navigation-footer
  text-align: center
  padding-bottom: 16px



@keyframes carbm-nav-drawer-enter
  0%
    transform: translate3d(-100%, 0, 0)

  100%
    transform: translate3d(0, 0, 0)


@keyframes carbm-nav-overlay-enter

  0%
    background-color: rgba(0, 0, 0, 0)
  100%
    background-color: rgba(0, 0, 0, 0.24)
