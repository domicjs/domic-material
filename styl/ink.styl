
@require 'common'

.dm-button-content.raised .dm-ink
	background-color: #fff

.dm-ink-container
	width: 100%
	height: 100%
	top: 0
	left: 0
	overflow: hidden
	position: absolute
	pointer-events: none

	background-color: rgba(0, 0, 0, 0)

	&.animate
		animation: dm-ink-container-ripple 0.6s ease-out

.dm-ink
	display: block
	position: absolute
	background-color: $dm-color-primary
	opacity: 0.4
	border-radius: 100%
	transform: scale(0)
	pointer-events: none

	margin-top: -25px
	margin-left: -25px
	width: 50px
	height: 50px

	&.animate
		animation: dm-ink-ripple 0.45s ease-out

@keyframes dm-ink-ripple {
	/** scale the element to 250% */
	100% {
		opacity: 0
		transform: scale(4)
	}
}

@keyframes dm-ink-container-ripple {
	50% {
		background-color: alpha($dm-color-primary, 0.2)
	}

	100% {
		background-color: rgba(0, 0, 0, 0)
	}
}
