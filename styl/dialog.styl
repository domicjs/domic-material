$animation_time = 0.3s
$animation_fn = cubic-bezier(0.550, 0.085, 0.680, 0.530)

.dm-dialog-noscroll
  overflow hidden

.dm-dialog-overlay

  animation-duration: 0.2s

  &.animation-mount
    animation-name: dm-dialog-overlay-enter
    animation-timing-function: ease-out

  &.animation-unmount
    animation-name: dm-dialog-overlay-enter
    animation-timing-function: ease-in
    animation-direction: reverse

  border 0
  padding 0
  margin 0

  // Its children will be screen centered.
  display flex
  flex-direction column
  align-items center
  justify-content center
  display -webkit-flex
  -webkit-flex-direction column
  -webkit-align-items center
  -webkit-justify-content center

  position absolute
  top 0
  left 0
  height 100vh
  width 100vw

  background-color rgba(0, 0, 0, 0.75)

.dm-dialog-buttonbar
  text-align right
  display flex
  justify-content flex-end

  &.stacked
    flex-direction column
    justify-content center
    -webkit-flex-direction column
    -webkit-justify-content center

    > .dm-button
      text-align right
      padding-top 6px
      padding-bottom 6px

  .dm-button + .dm-button
    margin-right 0

.dm-dialog-content
  padding 0 24px
  padding-bottom 24px
  color alpha(#000, 0.7)

  &:first-child
    padding-top 24px

  > *:last-child
    margin-bottom 0

.dm-dialog-root

  transform-origin: 50% 0
  animation-duration: 0.2s

  &.animation-mount
    animation-name: dm-dialog-root-enter
    animation-timing-function: ease-out

  &.animation-unmount
    animation-name: dm-dialog-root-leave
    animation-timing-function: ease-in


  & > h3
    padding 0 24px
    padding-top 24px

  & > h3 + .dm-dialog-content, & > .dm-toolbar + .dm-dialog-content
    padding-top 20px

  // FIXME color theme.
  background-color white

  // This is to avoid the dialog covering the whole screen.
  margin 24px 40px

  .dm-button-content
    min-width 0


.dm-dialog-title
  margin 0
  padding 0
